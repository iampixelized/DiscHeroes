<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thedebelopers.discheroes.MainMenu"
    android:background="@drawable/bg_book">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_x="28dp"
        android:layout_y="29dp"
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="228dp"
        android:layout_height="163dp"
        android:id="@+id/imageView2"
        android:layout_x="36dp"
        android:layout_y="130dp"
        android:background="@drawable/main_art" />

    <Button
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:text="Story Mode"
        android:id="@+id/story"
        android:layout_x="420dp"
        android:layout_y="180dp"
        android:background="@drawable/button"
        android:onClick="story"/>

    <Button
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:text="Arena"
        android:id="@+id/ai"
        android:layout_x="420dp"
        android:layout_y="220dp"
        android:background="@drawable/button"
        android:onClick="arena"/>

    <Button
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:text="Back"
        android:id="@+id/back"
        android:layout_x="420dp"
        android:layout_y="260dp"
        android:background="@drawable/button"
        android:onClick="back"/>
</AbsoluteLayout>

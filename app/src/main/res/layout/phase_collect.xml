<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/collectlayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thedebelopers.discheroes.CollectPhase"
    android:background="@drawable/bg_book">

    <ImageButton
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:id="@+id/imageButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pogsback"
        android:layout_x="250dp"
        android:layout_y="70dp"
        android:onClick="pogstack" />

    <ImageButton
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:id="@+id/stack"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pogsback"
        android:layout_x="248dp"
        android:layout_y="68dp"
        android:onClick="pogstack" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/pog1"
        android:background="@drawable/pogs001"
        android:layout_alignTop="@+id/stack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="43dp"
        android:layout_x="50dp"
        android:layout_y="70dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/pog2"
        android:background="@drawable/pogs000"
        android:layout_alignTop="@+id/stack"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="51dp"
        android:layout_x="450dp"
        android:layout_y="70dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team Flameling"
        android:id="@+id/team1"
        android:layout_x="75dp"
        android:layout_y="25dp"
        android:textColor="#131313" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team Dummie"
        android:id="@+id/team2"
        android:layout_x="380dp"
        android:layout_y="25dp"
        android:textColor="#131313" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 POG(s) left"
        android:id="@+id/counter"
        android:layout_x="242dp"
        android:layout_y="200dp"
        android:textSize="20sp"
        android:textColor="#131313" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saved: 0"
        android:id="@+id/saved1"
        android:layout_x="45dp"
        android:layout_y="190dp"
        android:textSize="20sp"
        android:textColor="#131313" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="captured: 0"
        android:id="@+id/capt1"
        android:layout_x="45dp"
        android:layout_y="220dp"
        android:textSize="20sp"
        android:textColor="#131313" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saved: 0"
        android:id="@+id/saved2"
        android:layout_x="450dp"
        android:layout_y="190dp"
        android:textSize="20sp"
        android:textColor="#131313" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="captured: 0"
        android:id="@+id/capt2"
        android:layout_x="450dp"
        android:layout_y="220dp"
        android:textSize="20sp"
        android:textColor="#131313" />
    <SeekBar
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:id="@+id/gauge"
        android:layout_x="25dp"
        android:layout_y="265dp"
        android:clickable="false"
        android:background="@drawable/hit_gauge"
        android:progress="0"
        android:max="100"
        android:progressBackgroundTint="#00ffffff"
        android:progressTint="#00ffffff"
        android:thumbTint="#0ba6e8"
        android:focusable="false"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/taphere"
        android:layout_x="229dp"
        android:layout_y="0dp"
        android:src="@drawable/tap_anim_3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap the stack of POGs!"
        android:id="@+id/mesaj"
        android:layout_x="0dp"
        android:layout_y="250dp"
        android:textAlignment="center" />

</AbsoluteLayout>
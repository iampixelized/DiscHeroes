<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thedebelopers.discheroes.Shop"
    android:background="@drawable/bg_book">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/shop_nov"
        android:layout_x="40dp"
        android:layout_y="60dp"
        android:background="@drawable/shop_nov" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/shop_int"
        android:layout_x="230dp"
        android:layout_y="100dp"
        android:background="@drawable/shop_int" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/shop_adv"
        android:layout_x="420dp"
        android:layout_y="60dp"
        android:background="@drawable/shop_adv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the pack that you want to buy\nget 1 POG per pack"
        android:id="@+id/tip"
        android:layout_x="160dp"
        android:layout_y="45dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credits: 1000"
        android:id="@+id/credits"
        android:layout_x="460dp"
        android:layout_y="20dp"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 credits"
        android:id="@+id/price1"
        android:layout_x="60dp"
        android:layout_y="220dp"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000 credits"
        android:id="@+id/price2"
        android:layout_x="250dp"
        android:layout_y="250dp"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7500 credits"
        android:id="@+id/price3"
        android:layout_x="440dp"
        android:layout_y="220dp"
        android:textSize="20sp"
        android:textColor="#000000" />

    <Button
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:text="Inventory"
        android:id="@+id/inventory"
        android:layout_x="20dp"
        android:layout_y="267dp"
        android:background="@drawable/button" />

    <Button
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:text="Back"
        android:id="@+id/back"
        android:layout_x="476dp"
        android:layout_y="267dp"
        android:background="@drawable/button" />
</AbsoluteLayout>

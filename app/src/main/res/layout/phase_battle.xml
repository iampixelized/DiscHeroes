        android:layout_y="50dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATK: 0"
        android:id="@+id/def2"
        android:layout_x="505dp"
        android:layout_y="50dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abilities Left: 0"
        android:id="@+id/able1"
        android:layout_x="100dp"
        android:layout_y="280dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abilities Left: 0"
        android:id="@+id/able2"
        android:layout_x="390dp"
        android:layout_y="280dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO battle message"
        android:id="@+id/verbose"
        android:layout_x="220dp"
        android:layout_y="245dp"
        android:textSize="20sp" />

</AbsoluteLayout>

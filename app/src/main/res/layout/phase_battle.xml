        android:layout_x="410dp"
        android:layout_y="25dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP: 20"
        android:id="@+id/hp1"
        android:layout_x="40dp"
        android:layout_y="50dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATK: 5"
        android:id="@+id/atk1"
        android:layout_x="130dp"
        android:layout_y="50dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEF: 3"
        android:id="@+id/def1"
        android:layout_x="220dp"
        android:layout_y="50dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP: 10"
        android:id="@+id/hp2"
        android:layout_x="325dp"
        android:layout_y="50dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATK: 0"
        android:id="@+id/atk2"

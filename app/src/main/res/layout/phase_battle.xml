        android:layout_height="match_parent"
        android:layout_x="72dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sprite2"
            android:layout_x="456dp"
            android:layout_y="110dp"
            android:background="@drawable/sprite000"
            android:layout_gravity="center|right" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sprite1"
            android:layout_x="115dp"
            android:layout_y="100dp"
            android:background="@drawable/sprite001"
            android:layout_gravity="center|left" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flameling"
        android:id="@+id/hero1"
        android:layout_x="115dp"
        android:layout_y="25dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dummie"
